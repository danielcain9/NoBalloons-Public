@model IEnumerable<No_Balloons.Models.Article>

@{
    ViewBag.Title = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<head>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<div class="all">
    <br />
    <div class="left">
        <h2>Search Results</h2>
        <br />
        @if (Model == null)
        {
            <h4>No Results</h4>
        }
        else
        {
            foreach (var item in Model)
            {
                <article class="sub-article">
                    <div class="sub-article-left">
                        <a href="/Article/Article?title=@item.Link" class="article-title-link" target="_blank">
                            <img class="sub-article-image" src="/Content/Images/@item.Image" />
                        </a>
                    </div>
                    <div class="sub-article-right">
                        <h4 class="sub-article-title">
                            <a href="/Article/Article?title=@item.Link" class="article-title-link" target="_blank">
                                @item.Title
                            </a>
                        </h4>
                    </div>
                </article>
                <hr class="article-line-break">
                <br />
            }
        }
        <div>
            @if (ViewBag.Page > 0)
            {
                <a href="@Url.Action("SearchResults", new { ViewBag.keyword,page = ViewBag.Page - 1})"
                   class="btn btn-default">
                    &laquo; Prev
                </a>
            }
            @if (ViewBag.Page < ViewBag.MaxPage)
            {
                <a href="@Url.Action("SearchResults", new { ViewBag.keyword, page = ViewBag.Page + 1})"
                   class="btn btn-default">
                    Next &raquo;
                </a>
            }
        </div>      
    </div>
    
    
</div>
  
